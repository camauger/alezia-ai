# .env.example
# Example environment variables for Alezia AI
# Copy this file to .env and fill in the values.

# API Configuration
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000,http://127.0.0.1:3000

# LLM Configuration
LLM_API_URL=http://localhost:11434/api
LLM_DEFAULT_MODEL=llama3
LLM_MOCK_MODE=True
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_MOCK_MODE=True
EMBEDDING_USE_GPU=False

# Database Configuration
DB_ECHO=False

# Memory Configuration
EXTRACTION_THRESHOLD=0.6
SIMILARITY_THRESHOLD=0.7
MAX_RELEVANT_MEMORIES=5
CHECK_SEMANTIC_SIMILARITY=True

# Server Configuration
HOST=0.0.0.0
RELOAD=True
WORKERS=1
LOG_LEVEL=info
